<h1 class="govuk-heading-xl">Check this is the child you want to find a foster family for?</h1>

<%= govuk_summary_list do |component|
  f.object.answers_by_step.each do |step, answers|
    answers.each do |answer|
      component.with_row do |row|
        row.with_key { t("answers.#{step.key}.#{answer.first}") }
        row.with_value { format_answer(answer.last) }
        row.with_action(text: "Change", href: children_creation_step_path(step.key))
      end
    end
  end
end %>
