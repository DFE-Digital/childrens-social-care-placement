<%= render GovukComponent::SummaryList.new do |component| %>%
  <%= component.slot(
    :row,
    key: "Date",
    value: @entry.created_at.strftime("%d/%m/%Y"),
    action: ''
  )
%>
<%= component.slot(
    :row,
    key: "Event",
    value: @entry.event,
    action: ''
  )
%>
<%= component.slot(
    :row,
    key: "Note",
    value: @entry.note,
    action: ""
  )
%>
<% end %>

