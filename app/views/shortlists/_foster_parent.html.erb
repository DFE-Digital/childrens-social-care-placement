<div class="govuk-grid-row govuk-!-margin-bottom-8">
  <div class="govuk-grid-column-full " id="foster_parent_<%= foster_parent.id %>">
    <h3 class="govuk-heading-m"><%= foster_parent.full_name %></h3>

    <% if foster_parent.placement_suitability %>
      <p>
        <span class="govuk-!-font-weight-bold">Placement type</span>:
        <%= foster_parent.placement_suitability.placement_types.map { |pt| t(pt, scope: "enums.placement_type") }.join(", ") %>
      </p>
    <% end %>

    <% case button %>
    <% when :place %>
      <%= govuk_button_to("Place", placements_path, params: { placement: { foster_parent_id: foster_parent.id, placement_need_id: placement_need.id } }) %>
    <% when :shortlist %>
      <%= govuk_button_to("Shortlist", shortlisted_foster_parents_path, params: { shortlisted_foster_parent: { foster_parent_id: foster_parent.id, shortlist_id: shortlist.id } }) %>
    <% end %>

    <hr class="govuk-section-break govuk-section-break--visible">
  </div>
</div>
